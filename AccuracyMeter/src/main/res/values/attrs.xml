<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AccuracyMeter">

        <attr name="am_ProgressTextEnabled" format="boolean"/>
        <attr name="am_ProgressTextSize" format="dimension"/>
        <attr name="am_ProgressTextColor" format="color"/>
        <attr name="am_ProgressTextFont" format="reference"/>
        <attr name="am_ProgressTextStyle" format="flags">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="am_ProgressTextPosition" format="enum">
            <enum name="BOTTOM_LEFT" value="0"/>
            <enum name="BOTTOM_RIGHT" value="1"/>
        </attr>
        <attr name="am_linesCount" format="integer"/>
        <attr name="am_linesWidth" format="dimension"/>

        <attr name="am_animationDuration" format="integer" />

        <attr name="am_backgroundAlpha" format="float" />

        <attr name="am_ThresholdIndicatorEnabled" format="boolean" />
        <attr name="am_ThresholdIndicatorColor" format="color" />
        <attr name="am_Threshold" format="float" />

    </declare-styleable>

</resources>